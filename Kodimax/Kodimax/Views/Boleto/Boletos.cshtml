@model IEnumerable<Kodimax.Models.Boleto>

@{
    ViewBag.Title = "Boletos";
}

<h2>Boletos</h2>

<p>
    @Html.ActionLink("Comprar", "ComprarBoleto")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Cine)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Empleado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pelicula)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sala)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Boletos)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Subtotal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Impuesto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Total)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Cine)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Empleado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pelicula)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sala)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Boletos)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Subtotal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Impuesto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Total)
        </td>
    </tr>
}

</table>
